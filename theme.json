{
    "$schema": "https://schemas.wp.org/wp/6.8/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "palette": [
                {
                    "color": "#ffffff",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#f8f9fa",
                    "name": "Background",
                    "slug": "background"
                },
                {
                    "color": "#212529",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#0d6efd",
                    "name": "Secondary",
                    "slug": "secondary"
                },
                {
                    "color": "#6c757d",
                    "name": "Tertiary",
                    "slug": "tertiary"
                },
                {
                    "color": "#e9ecef",
                    "name": "Border",
                    "slug": "border"
                },
                {
                    "color": "rgba(18, 24, 38)",
                    "name": "Footer Background",
                    "slug": "footer-bg"
                },
                {
                    "color": "rgba(255, 255, 255)",
                    "name": "Footer Heading",
                    "slug": "footer-heading"
                },
                {
                    "color": "rgba(210, 207, 207)",
                    "name": "Footer Text",
                    "slug": "footer-text"
                }
            ],
            "gradients": [
                {
                    "name": "Primary to Secondary",
                    "gradient": "linear-gradient(135deg, #212529 0%, #0d6efd 100%)",
                    "slug": "primary-to-secondary"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"Roboto\", sans-serif",
                    "name": "Roboto",
                    "slug": "roboto"
                },
                {
                    "fontFamily": "\"Merriweather\", serif",
                    "name": "Merriweather",
                    "slug": "merriweather"
                },
                {
                    "fontFamily": "\"Source Code Pro\", monospace",
                    "name": "Source Code Pro",
                    "slug": "source-code-pro"
                }
            ],
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "slug": "small"
                },
                {
                    "size": "1rem",
                    "slug": "regular"
                },
                {
                    "size": "1.25rem",
                    "slug": "medium"
                },
                {
                    "size": "1.5rem",
                    "slug": "large"
                },
                {
                    "size": "2rem",
                    "slug": "x-large"
                },
                {
                    "size": "2.5rem",
                    "slug": "xx-large"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1600px"
        },
        "spacing": {
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--base)",
            "text": "var(--wp--preset--color--primary)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--roboto)",
            "fontSize": "var(--wp--preset--font-size--regular)",
            "lineHeight": "1.6"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--merriweather)",
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--merriweather)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--merriweather)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                }
            },
            "code": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--source-code-pro)"
                }
            }
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": "4px"
                },
                "color": {
                    "background": "var(--wp--preset--color--secondary)",
                    "text": "var(--wp--preset--color--base)"
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--regular)"
                }
            },
            "core/navigation": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--regular)"
                }
            },
            "core/group": {
                "variants": {
                    "footer": {
                        "color": {
                            "background": "var(--wp--preset--color--footer-bg)"
                        }
                    }
                }
            },
            "core/heading": {
                "variants": {
                    "footer": {
                        "color": {
                            "text": "var(--wp--preset--color--footer-heading)"
                        }
                    }
                }
            },
            "core/paragraph": {
                "variants": {
                    "footer": {
                        "color": {
                            "text": "var(--wp--preset--color--footer-text)"
                        }
                    }
                }
            }
        }
    }
} 